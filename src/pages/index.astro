  <style>
    /* ===== HERO SECTION ===== */
    .hero {
      text-align: center;
      padding: 3rem 2rem;
      background: var(--color-accent);
      border: var(--border-width) solid var(--color-border);
      box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--color-border);
      margin-bottom: 3rem;
    }

    .hero h1 {
      font-size: 3.5rem;
      margin-bottom: 1rem;
      color: var(--color-text);
      text-transform: uppercase;
      letter-spacing: -0.03em;
    }

    :global([data-theme="dark"]) .hero h1 {
      color: #1a1a1a;
    }

    .subtitle {
      font-size: 1.25rem;
      color: var(--color-text);
      margin-bottom: 2rem;
      font-weight: 500;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    :global([data-theme="dark"]) .subtitle {
      color: #1a1a1a;
    }

    .about-images {
      display: flex;
      gap: 2rem;
      justify-content: center;
      flex-wrap: wrap;
      margin-top: 2rem;
    }

    .about-images img {
      max-width: 300px;
      width: 100%;
      border: var(--border-width) solid var(--color-border);
      box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--color-border);
    }

    .about-images img:hover {
      transform: translate(-4px, -4px) rotate(-1deg);
      box-shadow: 8px 8px 0 var(--color-border);
    }

    .about-images img:nth-child(even):hover {
      transform: translate(-4px, -4px) rotate(1deg);
    }

    /* ===== CATEGORIES SECTION ===== */
    .categories {
      margin-top: 4rem;
    }

    .categories h2 {
      font-size: 1.75rem;
      margin-bottom: 2rem;
      text-align: center;
      display: inline-block;
      background: var(--color-primary);
      color: white;
      padding: 0.5rem 1rem;
      border: var(--border-width) solid var(--color-border);
      box-shadow: 3px 3px 0 var(--color-border);
    }

    .categories > h2 {
      display: block;
      width: fit-content;
      margin-left: auto;
      margin-right: auto;
    }

    /* Grid for cards */
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
    }

    /* Card styling */
    .card {
      background: var(--color-surface);
      padding: 1.5rem;
      border: var(--border-width) solid var(--color-border);
      text-decoration: none;
      color: var(--color-text);
      box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--color-border);
      display: block;
    }

    .card:hover {
      transform: translate(-2px, -2px);
      box-shadow: 6px 6px 0 var(--color-border);
    }

    /* Card colors for variety */
    .card:nth-child(1) { border-left: 6px solid var(--color-primary); }
    .card:nth-child(2) { border-left: 6px solid var(--color-accent); }
    .card:nth-child(3) { border-left: 6px solid var(--color-accent-alt); }
    .card:nth-child(4) { border-left: 6px solid var(--color-secondary); }
    .card:nth-child(5) { border-left: 6px solid var(--color-primary); }
    .card:nth-child(6) { border-left: 6px solid var(--color-accent); }

    :global([data-theme="dark"]) .card:nth-child(2),
    :global([data-theme="dark"]) .card:nth-child(6) {
      border-left-color: var(--color-accent);
    }

    .card h3 {
      font-size: 1.25rem;
      margin-bottom: 0.5rem;
      text-transform: uppercase;
    }

    .card p {
      color: var(--color-text-muted);
      font-size: 0.95rem;
      text-transform: none;
    }

    /* ===== SOCIAL SECTION ===== */
    .social {
      margin-top: 4rem;
    }

    .social h2 {
      font-size: 1.75rem;
      margin-bottom: 2rem;
      text-align: center;
      display: block;
      width: fit-content;
      margin-left: auto;
      margin-right: auto;
      background: var(--color-accent-alt);
      color: var(--color-text);
      padding: 0.5rem 1rem;
      border: var(--border-width) solid var(--color-border);
      box-shadow: 3px 3px 0 var(--color-border);
    }

    :global([data-theme="dark"]) .social h2 {
      color: #1a1a1a;
    }

    .social-links {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .social-links a {
      padding: 0.75rem 1.5rem;
      background: var(--color-surface);
      text-decoration: none;
      color: var(--color-text);
      border: var(--border-width) solid var(--color-border);
      font-weight: 700;
      text-transform: uppercase;
      font-size: 0.875rem;
      box-shadow: 3px 3px 0 var(--color-border);
    }

    .social-links a:hover {
      background: var(--color-primary);
      color: white;
      transform: translate(-2px, -2px);
      box-shadow: 5px 5px 0 var(--color-border);
    }

    /* Alternate colors for variety */
    .social-links a:nth-child(2n) { background: var(--color-surface-alt); }
    .social-links a:nth-child(3n) { background: var(--color-accent); color: var(--color-text); }
    .social-links a:nth-child(3n):hover { background: var(--color-primary); color: white; }

    :global([data-theme="dark"]) .social-links a:nth-child(3n) { color: #1a1a1a; }

    /* ===== RESPONSIVE ===== */
    @media (max-width: 768px) {
      .hero {
        padding: 2rem 1rem;
      }

      .hero h1 {
        font-size: 2rem;
      }

      .subtitle {
        font-size: 1rem;
      }

      .about-images {
        flex-direction: column;
        align-items: center;
      }

      .about-images img {
        max-width: 100%;
      }

      .social-links a {
        min-height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
    }
  </style>
</BaseLayout>
