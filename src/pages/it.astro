      margin-bottom: 3rem;
    }

    .section h2 {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
      display: inline-block;
      background: var(--color-primary);
      color: white;
      padding: 0.5rem 1rem;
      border: var(--border-width) solid var(--color-border);
      box-shadow: 3px 3px 0 var(--color-border);
      text-transform: uppercase;
    }

    /* Project & Talk Cards */
    .project, .talk {
      background: var(--color-surface);
      padding: 1.5rem 1.5rem 1.5rem 2rem;
      margin-bottom: 1.5rem;
      border: var(--border-width) solid var(--color-border);
      border-left: 8px solid var(--color-primary);
      box-shadow: var(--shadow-offset) var(--shadow-offset) 0 var(--color-border);
    }

    .project:hover, .talk:hover {
      transform: translate(-2px, -2px);
      box-shadow: var(--shadow-offset-hover) var(--shadow-offset-hover) 0 var(--color-border);
      border-left-color: var(--color-secondary);
    }

    /* Alternate border colors */
    .project:nth-child(2) { border-left-color: var(--color-accent); }
    .project:nth-child(3) { border-left-color: var(--color-accent-alt); }
    .project:nth-child(4) { border-left-color: var(--color-secondary); }
    .project:nth-child(5) { border-left-color: var(--color-primary); }

    [data-theme="dark"] .project:nth-child(2) { border-left-color: var(--color-accent); }

    .project h3, .talk h3 {
      font-size: 1.3rem;
      margin-bottom: 0.75rem;
      text-transform: uppercase;
    }

    .project p, .section > p {
      color: var(--color-text-muted);
      line-height: 1.6;
      margin-bottom: 1rem;
      text-transform: none;
    }

    /* Links/Buttons */
    .links {
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
      margin-top: 1rem;
    }

    .links a {
      padding: 0.5rem 1rem;
      background: var(--color-primary);
      color: white;
      text-decoration: none;
      border: var(--border-width) solid var(--color-border);
      font-size: 0.8rem;
      font-weight: 700;
      text-transform: uppercase;
      box-shadow: 2px 2px 0 var(--color-border);
    }

    .links a:hover {
      transform: translate(-1px, -1px);
      box-shadow: 3px 3px 0 var(--color-border);
      background: var(--color-primary-dark);
    }

    /* Responsive */
    @media (max-width: 768px) {
      h1 {
        font-size: 1.75rem;
        padding: 0.5rem 1rem;
      }

      .project, .talk {
        box-shadow: 3px 3px 0 var(--color-border);
      }

      .links a {
        min-height: 44px;
        display: inline-flex;
        align-items: center;
      }
    }
  </style>
