    [data-theme="dark"] h1 {
      color: #1a1a1a;
    }

    .podcast-main {
      margin-bottom: 3rem;
    }

    /* Featured Podcast Card */
    .podcast-card {
      background: var(--color-surface);
      padding: 2.5rem;
      border: var(--border-width) solid var(--color-border);
      box-shadow: 6px 6px 0 var(--color-border);
      text-align: center;
