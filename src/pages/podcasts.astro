    }

    [data-theme="dark"] .podcast-card.featured h2,
    [data-theme="dark"] .podcast-card.featured .description {
      color: #1a1a1a;
    }

    /* Dark mode: better button contrast on yellow */
    [data-theme="dark"] .podcast-card.featured .btn-primary {
      background: #1a1a1a;
      color: var(--color-accent);
      border-color: #1a1a1a;
      box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.3);
    }

    [data-theme="dark"] .podcast-card.featured .btn-primary:hover {
      background: #333333;
      box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.3);
    }

    .description {
      color: var(--color-text);
      line-height: 1.8;
      font-size: 1.1rem;
      margin-bottom: 1.5rem;
      text-transform: none;
    }

    .podcast-link {
      margin-top: 2rem;
    }

    .btn-primary {
      display: inline-block;
      padding: 1rem 2rem;
      background: var(--color-primary);
      color: white;
      text-decoration: none;
      border: var(--border-width) solid var(--color-border);
      font-size: 1rem;
      font-weight: 700;
      text-transform: uppercase;
      box-shadow: 4px 4px 0 var(--color-border);
    }

    .btn-primary:hover {
      transform: translate(-2px, -2px);
      box-shadow: 6px 6px 0 var(--color-border);
      background: var(--color-primary-dark);
    }

    .section {
      margin-top: 3rem;
    }

    .section h2 {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
      display: inline-block;
      background: var(--color-accent-alt);
      color: var(--color-text);
      padding: 0.5rem 1rem;
      border: var(--border-width) solid var(--color-border);
      box-shadow: 3px 3px 0 var(--color-border);
      text-transform: uppercase;
    }

    [data-theme="dark"] .section h2 {
      color: #1a1a1a;
    }

    .section p {
      color: var(--color-text-muted);
      line-height: 1.6;
      text-transform: none;
    }

    @media (max-width: 768px) {
      h1 {
        font-size: 1.75rem;
      }

      .podcast-card {
        padding: 1.5rem;
        box-shadow: 4px 4px 0 var(--color-border);
      }

      .btn-primary {
        min-height: 44px;
        display: inline-flex;
        align-items: center;
      }
    }
